<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Mail</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Edad</th>
      <th>Imagen</th>
      <th>Gustos</th>
      <th>Telefono</th>
      <th>Comuna</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.mail %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.descripcion %></td>
        <td><%= usuario.edad %></td>
        <td><%= usuario.imagen %></td>
        <td><%= usuario.gustos %></td>
        <td><%= usuario.telefono %></td>
        <td><%= usuario.comuna %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_usuario_path %>
